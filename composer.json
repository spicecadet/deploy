{
    "name": "edmund.turbin/wordpress-starter",
    "description": "Install development related plugins",
    "type": "dev",
    "license": "GPL",
    "authors": [
        {
            "name": "Edmund Turbin",
            "email": "edmund.turbin@wpengine.com"
        }
    ],

    "repositories":[
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    
    "require": {
        "composer/installers": "~1.0",
	    "wpackagist-plugin/woocommerce":"*",
        "wpackagist-plugin/advanced-custom-fields":"*",
        "wpackagist-plugin/woocommerce-shipping-options":"*",
        "wpackagist-plugin/theme-check":"*",
        "wpackagist-plugin/debug-bar":"*",
        "wpackagist-plugin/debug-objects":"*",
        "wpackagist-plugin/demo-data-creator":"*",
        "wpackagist-plugin/user-switching":"*",
        "wpackagist-plugin/content-staging":"*"
    },

    "extra": {
        "installer-paths": {
            "wp-content/plugins/{$name}": ["type:wordpress-plugin"]
        }
    }   
}
